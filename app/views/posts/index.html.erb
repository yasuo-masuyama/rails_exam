<h1>投稿一覧ページ</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th><内容><th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '詳細', post_path(post.id) %></td>
    <td><%= link_to '編集', edit_post_path(post.id) %></td>
    <td><%= link_to '削除', post_path(post.id), method: :delete ,data: { confirm: '本当に削除します?'} %></td>
  </tr>
<% end %>
</table>

<%= link_to '新規投稿', new_post_path %>

